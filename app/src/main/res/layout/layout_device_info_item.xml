<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_device_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/bg_round_16dp"
    android:backgroundTint="@color/bg_2"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_device_type"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_device_type_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/inter"
        android:textColor="@color/text_2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_device_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_device_type"
        app:layout_constraintTop_toTopOf="@id/iv_device_type"
        tools:text="iPhone 15 Pro Max"/>

    <TextView
        android:id="@+id/tv_device_os"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter"
        android:textColor="@color/text_3"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tv_device_name"
        app:layout_constraintStart_toStartOf="@id/tv_device_name"
        app:layout_constraintTop_toBottomOf="@id/tv_device_name"
        tools:text="Flow Reference macOS 8.4.1"/>

    <TextView
        android:id="@+id/tv_device_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/inter"
        android:textColor="@color/text_3"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tv_device_name"
        app:layout_constraintStart_toStartOf="@id/tv_device_name"
        app:layout_constraintTop_toBottomOf="@id/tv_device_os"
        tools:text="New York, US Â· April 12, 2023"/>

    <ImageView
        android:id="@+id/iv_device_mark"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>