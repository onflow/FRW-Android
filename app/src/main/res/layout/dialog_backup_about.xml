<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_backup_about"
    android:background="@color/bg_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="16dp"
        android:rotation="180"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_arrow_right_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_1"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btn_ok"
        app:layout_constraintTop_toBottomOf="@id/iv_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="28dp">

            <TextView
                android:id="@+id/tv_about_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter"
                android:gravity="start"
                android:textColor="@color/text_1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/backup_recovery_phrase_about_title"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_about_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:gravity="start"
                android:textColor="@color/colorSecondary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/recovery_phrase"
                app:layout_constraintTop_toBottomOf="@id/tv_about_title"/>

            <TextView
                android:id="@+id/tv_about_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/inter"
                android:gravity="start"
                android:lineSpacingMultiplier="1.1"
                android:text="@string/backup_recovery_phrase_about_note"
                android:textColor="@color/text_2"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_about_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.flowfoundation.wallet.widgets.LoadingMaterialButton
        android:id="@+id/btn_ok"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/wallet_create_button_margin"
        android:enabled="true"
        android:layout_marginHorizontal="18dp"
        android:gravity="center"
        android:text="@string/ok"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>


</androidx.constraintlayout.widget.ConstraintLayout>