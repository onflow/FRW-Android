<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_private_key_store_info"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryVariant">

    <TextView
        android:id="@+id/tv_key_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter"
        android:text="@string/key_store"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter"
        android:text="@string/json"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_key_store"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/required_asterisk"
        android:textColor="@color/info_error_red"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tv_json"
        app:layout_constraintTop_toTopOf="@id/tv_json"/>

    <EditText
        android:id="@+id/et_json"
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_round_16dp"
        android:textCursorDrawable="@drawable/bg_edittext_cursor"
        android:backgroundTint="@color/bg_card"
        android:fontFamily="@font/inter"
        android:hint="@string/key_store_json_hint"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:gravity="start"
        android:textColor="@color/text_1"
        android:textColorHint="@color/text_3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_json"
        tools:text=""/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter"
        android:text="@string/password"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_json"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/required_asterisk"
        android:textColor="@color/info_error_red"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tv_password"
        app:layout_constraintTop_toTopOf="@id/tv_password"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:layout_marginTop="4dp"
        android:elevation="8dp"
        android:textCursorDrawable="@drawable/bg_edittext_cursor"
        android:translationZ="8dp"
        app:boxBackgroundMode="none"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        app:passwordToggleEnabled="true">


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_round_16dp"
            android:backgroundTint="@color/bg_card"
            android:fontFamily="@font/inter"
            android:hint="@string/key_store_password_hint"
            android:imeOptions="actionNext"
            android:autofillHints="password"
            android:importantForAutofill="yes"
            android:inputType="textPassword"
            android:padding="20dp"
            android:gravity="start"
            android:textColor="@color/text_1"
            android:textColorHint="@color/text_3"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_password"
            tools:text=""/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter"
        android:text="@string/address"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/il_password"/>

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_round_16dp"
        android:backgroundTint="@color/bg_card"
        android:fontFamily="@font/inter"
        android:hint="@string/key_store_address_hint"
        android:imeOptions="actionNext"
        android:autofillHints="name"
        android:importantForAutofill="yes"
        android:inputType="text"
        android:padding="20dp"
        android:gravity="start"
        android:textColor="@color/text_1"
        android:textColorHint="@color/text_3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address"
        tools:text=""/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_import"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="56dp"
        android:enabled="true"
        android:text="@string/import_str"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>