<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_restore_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_error_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter"
        android:gravity="center_horizontal"
        android:textColor="@color/text_1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/restore_failed"/>

    <TextView
        android:id="@+id/tv_error_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter"
        android:gravity="center_horizontal"
        android:textColor="@color/text_2"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_error_title"
        tools:text="@string/restore_failed_desc"/>

    <!-- Info item 1 -->
    <LinearLayout
        android:id="@+id/ll_info_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_info_card"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_error_desc">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_multi_1"
            app:tint="@color/colorSecondary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/restore_failed_note_1"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Info item 2 -->
    <LinearLayout
        android:id="@+id/ll_info_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_info_card"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/ll_info_1">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_multi_2"
            app:tint="@color/colorSecondary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/restore_failed_note_2"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Info item 3 -->
    <LinearLayout
        android:id="@+id/ll_info_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_info_card"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/ll_info_2">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_multi_3"
            app:tint="@color/colorSecondary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/restore_failed_note_3"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_try"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_round_16dp"
        android:backgroundTint="@color/text_1"
        android:fontFamily="@font/inter_semi_bold"
        android:gravity="center"
        android:text="@string/try_it_again"
        android:textColor="@color/button_text"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ll_info_3"/>

</androidx.constraintlayout.widget.ConstraintLayout>