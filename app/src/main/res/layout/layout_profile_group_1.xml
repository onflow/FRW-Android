<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="2dp"
    app:layout_constraintTop_toBottomOf="@id/action_group">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_settings">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.flowfoundation.wallet.page.profile.widget.ProfilePreferenceMark
                android:id="@+id/wallet_connect_preference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_wallet_connect"
                app:isArrowVisible="true"
                app:titleId="@string/wallet_connect" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/profile_card_divider" />

            <com.flowfoundation.wallet.page.profile.widget.ProfilePreferenceMark
                android:id="@+id/self_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_devices"
                app:isArrowVisible="true"
                app:titleId="@string/devices" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>