<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_seed_phrase_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryVariant">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="10dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btn_import"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_seed_phrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/inter"
                android:textColor="@color/text_1"
                android:text="@string/seed_phrase"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="@string/required_asterisk"
                android:textColor="@color/info_error_red"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/tv_seed_phrase"
                app:layout_constraintTop_toTopOf="@id/tv_seed_phrase"/>

            <EditText
                android:id="@+id/et_seed_phrase"
                android:layout_width="0dp"
                android:layout_height="122dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round_16dp"
                android:backgroundTint="@color/bg_card"
                android:fontFamily="@font/inter"
                android:gravity="top"
                android:hint="@string/restore_seed_phrase_hint"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="@color/text_1"
                android:textColorHint="@color/text_3"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_seed_phrase"
                tools:text=""/>

            <ImageView
                android:id="@+id/state_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_warning"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/et_seed_phrase"
                app:layout_constraintTop_toBottomOf="@id/et_seed_phrase"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/word_not_found"
                android:textColor="@color/error"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/state_icon"
                app:layout_constraintStart_toEndOf="@id/state_icon"
                app:layout_constraintTop_toTopOf="@id/state_icon"
                tools:visibility="visible"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/state_icon"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/inter"
                android:text="@string/address"
                android:textColor="@color/text_1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_view"/>

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                android:autofillHints="name"
                android:background="@drawable/bg_round_16dp"
                android:backgroundTint="@color/bg_card"
                android:fontFamily="@font/inter"
                android:gravity="start"
                android:hint="@string/key_store_address_hint"
                android:imeOptions="actionNext"
                android:importantForAutofill="yes"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/text_1"
                android:textColorHint="@color/text_3"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_address"
                tools:text=""/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_address">

                <ImageView
                    android:id="@+id/iv_advanced"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_seed_phrase_advanced_open"
                    app:tint="@color/text_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/restore_seed_phrase_advanced"
                    android:textColor="@color/text_1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/iv_advanced"
                    app:layout_constraintStart_toEndOf="@id/iv_advanced"
                    app:layout_constraintTop_toTopOf="@id/iv_advanced"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_advanced_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_advanced">

                <TextView
                    android:id="@+id/tv_derivation_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/restore_seed_derivation_path"
                    android:textColor="@color/text_1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <EditText
                    android:id="@+id/et_derivation_path"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints="name"
                    android:background="@drawable/bg_round_16dp"
                    android:backgroundTint="@color/bg_card"
                    android:fontFamily="@font/inter"
                    android:gravity="start"
                    android:hint="@string/restore_seed_phrase_derivation_path_hint"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@color/text_1"
                    android:textColorHint="@color/text_3"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_derivation_path"
                    tools:text=""/>

                <TextView
                    android:id="@+id/tv_passphrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/restore_seed_passphrase"
                    android:textColor="@color/text_1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_derivation_path"/>

                <EditText
                    android:id="@+id/et_passphrase"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints="name"
                    android:background="@drawable/bg_round_16dp"
                    android:backgroundTint="@color/bg_card"
                    android:fontFamily="@font/inter"
                    android:gravity="start"
                    android:hint="@string/restore_seed_phrase_passphrase_hint"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@color/text_1"
                    android:textColorHint="@color/text_3"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_passphrase"
                    tools:text=""/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_import"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="56dp"
        android:enabled="true"
        android:text="@string/import_str"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>