<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/profile_card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:layout_constraintTop_toBottomOf="@id/group2">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <io.outblock.lilico.page.profile.widget.ProfilePreference
            android:id="@+id/chrome_extension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isArrowVisible="true"
            app:icon="@drawable/ic_settings_extension"
            app:title="@string/chrome_extension"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/profile_card_divider"/>

        <io.outblock.lilico.page.profile.widget.ProfilePreference
            android:id="@+id/bug_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isArrowVisible="true"
            app:icon="@drawable/ic_settings_bug"
            app:title="@string/bug_report"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/profile_card_divider"/>

        <io.outblock.lilico.page.profile.widget.ProfilePreference
            android:id="@+id/about_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isArrowVisible="true"
            app:icon="@drawable/ic_settings_about"
            app:title="@string/about"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>