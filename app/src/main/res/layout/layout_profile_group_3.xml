<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="2dp"
    app:layout_constraintTop_toBottomOf="@id/group2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_settings">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.flowfoundation.wallet.page.profile.widget.ProfilePreference
                android:id="@+id/bug_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_settings_bug"
                app:isArrowVisible="true"
                app:titleId="@string/bug_report" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/profile_card_divider" />

            <com.flowfoundation.wallet.page.profile.widget.ProfilePreference
                android:id="@+id/developer_mode_preference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_developer"
                app:titleId="@string/developer_mode" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/profile_card_divider" />

            <com.flowfoundation.wallet.page.profile.widget.ProfilePreference
                android:id="@+id/chrome_extension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_settings_extension"
                app:isArrowVisible="true"
                app:titleId="@string/chrome_extension" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>

</com.google.android.material.card.MaterialCardView>