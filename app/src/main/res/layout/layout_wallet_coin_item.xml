<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/home_page_card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/coin_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:round="48dp"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_coin_flow"/>

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/text_1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/coin_icon"
            app:layout_constraintTop_toTopOf="@id/coin_icon"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Flow"/>

        <TextView
            android:id="@+id/coin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:textColor="@color/text_2"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/coin_icon"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/coin_name"
            app:layout_constraintTop_toBottomOf="@id/coin_name"
            tools:text="$9.8"/>

        <TextView
            android:id="@+id/tv_quote_change"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_round_12dp"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:textColor="@color/accent_green"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/coin_price"
            app:layout_constraintStart_toEndOf="@id/coin_price"
            app:layout_constraintTop_toTopOf="@id/coin_price"
            app:layout_constraintWidth_min="32dp"
            tools:text="+0.0%"/>

        <TextView
            android:id="@+id/tv_inaccessible_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_round_4dp"
            android:backgroundTint="@color/inaccessible_tag_background_gray"
            android:fontFamily="@font/inter_semi_bold"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:text="@string/inaccessible_tag"
            android:textColor="@color/accent_gray"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/coin_icon"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/coin_icon"
            app:layout_constraintTop_toBottomOf="@id/coin_name"/>

        <TextView
            android:id="@+id/coin_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/text_1"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/coin_balance_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@id/coin_icon"
            tools:text="Flow"/>

        <TextView
            android:id="@+id/coin_balance_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:textColor="@color/text_2"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/coin_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/coin_balance"
            tools:text="$9.8"/>

        <View
            android:id="@+id/staking_line"
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/outline"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/coin_icon"
            app:layout_constraintStart_toStartOf="@id/coin_icon"
            app:layout_constraintTop_toBottomOf="@id/coin_icon"
            tools:visibility="visible"/>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/staking_point"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/outline"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/coin_icon"
            app:layout_constraintStart_toStartOf="@id/coin_icon"
            app:layout_constraintTop_toBottomOf="@id/staking_line"
            app:round="100dp"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/staking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/staked_flow"
            android:textColor="@color/text_1"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/staking_point"
            app:layout_constraintStart_toStartOf="@id/coin_name"
            app:layout_constraintTop_toTopOf="@id/staking_point"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/staking_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/text_2"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/staking_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/staking_name"
            tools:text="$9.8"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/staking_amount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:textColor="@color/text_2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/staking_amount"
            tools:text="$9.8"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>