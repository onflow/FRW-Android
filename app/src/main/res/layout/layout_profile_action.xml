<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="2dp"
    app:layout_constraintTop_toBottomOf="@id/profile_header_wrapper">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_settings">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/address_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:letterSpacing="0"
                android:text="@string/address_book"
                android:textAllCaps="false"
                android:textColor="@color/note"
                android:textSize="12sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_address"
                app:iconGravity="textTop"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                app:iconTint="@color/transparent"
                app:iconTintMode="add" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/wallet_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:letterSpacing="0"
                android:text="@string/account_list"
                android:textAllCaps="false"
                android:textColor="@color/note"
                android:textSize="12sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_settings_wallet"
                app:iconGravity="textTop"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                app:iconTint="@color/transparent"
                app:iconTintMode="add" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>
</com.google.android.material.card.MaterialCardView>